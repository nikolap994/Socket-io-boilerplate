<div class="row">
    <div class="col s6">
        <div class="input-field col s12" id="message_list">
        </div>

        <form action="" class="col s12">
            <input type="text" id="m" autocomplete="off" /><button class="waves-effect waves-light btn">Send</button>
        </form>
    </div>
</div>

<script src="/socket.io/socket.io.js"></script>
<script src="https://code.jquery.com/jquery-1.11.1.js"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
<script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>

<script>
    $(function () {
        var socket = io.connect('/');
        $('form').submit(function () {
            socket.emit('chat message', $('#m').val());
            $('#m').val('');
            return false;
        });

        socket.on('message_sender', function (msg) {
            $("#message_list").append("<div class='row left-align card-panel red accent-1'>" + msg + "</div>");
        });

        socket.on('message_reciever', function (msg) {
            $("#message_list").append("<div class='row right-align card-panel blue accent-1'>" + msg + "</div>");
        });
    });
</script>